@model IntegratedSystems.Domain.DTO.VaccinationDTO

<h4>Add pacient to centre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddToCartConfirmed">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label"></label>
                <input asp-for="Manufacturer" class="form-control" />
                <span asp-validation-for="Manufacturer" class="text-danger"></span>

                <label asp-for="DateTaken" class="control-label"></label>
                <input asp-for="DateTaken" class="form-control" />
                <span asp-validation-for="DateTaken" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="VaccinationCenter" class="form-control" />
            <div class="form-group">
                <label asp-for="PatientId" class="control-label">Select Patient:</label>
                <select asp-for="PatientId" class="form-control">

                    @foreach (var patient in Model.PacientintinCentar)
                    {
                        <option value="@patient.Id">@patient.FirstName</option>
                    }
                </select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>

            <div class="form-group">
               

                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

